<h1><%= @post.title %></h1>
<h4><%= @post.author %></h4>
<p><%= @post.content %></p>

 <div><%= link_to('Leave comment', new_post_comment_path(@post)) %></div>

 <h1>Comments</h1>

 <% @post.comments.each do |comment| %>
  <h3><%= comment.name %></h3>
  <small>Commented <%= time_ago_in_words(comment.created_at) %> ago</small>
  <p><%= comment.text  %></p>
 <% end %>

