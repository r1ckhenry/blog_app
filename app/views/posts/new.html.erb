<%= form_for(@post) do |f| %>
  
  <%= f.label :author  %>    
  <%= f.text_field :author  %>

  <%= f.label :title  %>    
  <%= f.text_field :title  %>    

  <%= f.label :content  %>    
  <%= f.text_area :content %>

  <%= f.label :img  %>    
  <%= f.text_field :img  %>    

  <%= f.submit 'Submit' %>    

<% end %>